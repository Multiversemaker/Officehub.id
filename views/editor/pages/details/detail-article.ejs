<main id="mainContent" class="content shifted p-4">
  <!-- Hero Section -->
  <div
    class="article-hero d-flex align-items-end"
    style="background-image: url('<%= article.image %>')"
  >
    <div class="caption-box w-100 px-4 py-3 text-white">
      <h2 class="article-title m-0 fw-bold"><%= article.judul %></h2>
      <p class="article-meta m-0">
        <%= article.tanggal %> &nbsp; By <%= article.penulis %>
      </p>
    </div>
  </div>

  <!-- Konten Artikel -->
  <div class="p-5 bg-white">
    <div class="mt-3 d-flex gap-2">
      <a
        href="/editor/articles/edit-article/<%= article.judul %>"
        class="btn px-3"
      >
        <i class="bi bi-plus-circle"></i>
        Edit</a
      >
      <button
        class="btn px-3"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
      >
        <i class="bi bi-trash-fill"></i>
        Delete
      </button>
      <a href="/editor/articles" class="btn px-3">
        <i class="bi bi-arrow-left-short"></i> Back
      </a>
    </div>
    <div class="information mt-4"><%- article.informasi %></div>
  </div>
</main>
