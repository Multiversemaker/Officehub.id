<main id="mainContent" class="content shifted p-4">
  <div class="position-relative mb-4">
    <img
      src="<%= event.image %>"
      alt="Event Image"
      class="img-fluid w-100 rounded-3"
      style="max-height: 300px; object-fit: cover; filter: brightness(60%)"
    />
    <div
      class="position-absolute bottom-0 end-0 p-4 text-white text-end"
      style="width: 60%; transform: translateX(-10%)"
    >
      <h2 class="fw-bold m-0"><%= event.tema %></h2>
      <p class="m-0"><%= event.tanggal %></p>
    </div>
  </div>
  <div class="d-flex gap-2 mb-4">
    <a href="/editor/events" class="btn px-3">
      <i class="bi bi-arrow-left-short"></i> Back
    </a>
  </div>

  <div class="row mt-3 align-items-start">
    <div class="information col-md-7 mb-3">
      <h4 class="fw-bold">Deskripsi</h4>
      <p><%= event.deskripsi %></p>
      <div class="mt-4">
        <h5 class="fw-bold">Rundown Acara</h5>
        <% if (event.subEvents && event.subEvents.length > 0) { %>
        <ul class="list-group list-group-flush">
          <% event.subEvents.forEach(function(sub) { %>
          <li class="list-group-item d-flex align-items-start">
            <span><%= sub.deskripsi %></span>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p class="text-muted">Belum ada sub event</p>
        <% } %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="p-3 rounded-3 shadow-sm bg-white">
        <p>
          <i class="bi bi-clock me-2"></i>
          <%= event.waktuMulai %> - <%= event.waktuSelesai %>
        </p>
        <p>
          <i class="bi bi-calendar me-2"></i>
          <%= event.tanggal %>
        </p>
        <p><i class="bi bi-geo-alt me-2"></i> <%= event.lokasi %></p>
      </div>
    </div>
  </div>
</main>
