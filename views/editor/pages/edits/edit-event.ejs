<main id="mainContent" class="content shifted p-4">
  <div class="container-fluid">
    <h2 class="heading">Edit Event</h2>

    <form
      action="/editor/events/<%= event._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <input type="hidden" name="id" value="<%= event._id %>" />

      <div class="row">
        <div class="col-md-8">
          <div class="mb-3">
            <label class="form-label">Judul</label>
            <input
              type="text"
              class="form-control"
              name="tema"
              value="<%= event.tema %>"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Deskripsi</label>
            <textarea
              class="form-control"
              name="deskripsi"
              rows="4"
              placeholder="Deskripsi Event"
              required
            >
<%= event.deskripsi %></textarea
            >
          </div>
          <div class="mb-3" id="subEventSection">
            <label class="form-label">Sub Events</label>

            <!-- Wrapper berisi semua sub event -->
            <div id="subEventWrapper">
              <% if (event.subEvents && event.subEvents.length > 0) { %> <%
              event.subEvents.forEach(function(sub) { %>
              <div class="d-flex gap-2 mb-2 align-items-center">
                <input
                  type="text"
                  class="form-control"
                  name="subEvents[]"
                  value="<%= sub.deskripsi %>"
                  placeholder="Deskripsi Sub Event"
                />
                <button
                  type="button"
                  class="btn btn-sm btn-danger btnRemoveSubEvent"
                >
                  Remove
                </button>
              </div>
              <% }) %> <% } %>
            </div>

            <button
              type="button"
              id="btnAddSubEvent"
              class="btn btn-secondary mt-2"
            >
              + Add Sub Event
            </button>
          </div>

          <div class="mb-3 mt-3">
            <label class="form-label">Image</label>
            <% if (event.image) { %>
            <div class="mb-2">
              <img
                src="<%= event.image %>"
                alt="Event Image"
                class="img-fluid rounded"
                style="max-height: 150px; object-fit: cover"
              />
            </div>
            <% } %>
            <input type="file" class="form-control" name="image" />
            <small class="text-muted"
              >Kosongkan jika tidak ingin mengganti gambar</small
            >
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <label class="form-label">Tanggal</label>
            <input
              type="date"
              class="form-control"
              name="tanggal"
              value="<%= event.tanggal.toISOString().split('T')[0] %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Waktu Mulai</label>
            <input
              type="time"
              class="form-control"
              name="waktuMulai"
              value="<%= event.waktuMulai %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Waktu Selesai</label>
            <input
              type="time"
              class="form-control"
              name="waktuSelesai"
              value="<%= event.waktuSelesai %>"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Lokasi</label>
            <textarea
              class="form-control"
              name="lokasi"
              rows="3"
              placeholder="Lokasi Event"
              required
            >
<%= event.lokasi %></textarea
            >
          </div>
          <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-save"></i> Update
            </button>
            <a href="/editor/events" class="btn btn-secondary">
              <i class="bi bi-arrow-left"></i> Cancel
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</main>
