<form
  id="articleForm"
  action="/editor/articles"
  method="POST"
  enctype="multipart/form-data"
>
  <main id="mainContent" class="content shifted p-4">
    <div class="container-fluid">
      <h2 class="heading">New Article</h2>
      <div
        id="judul"
        class="editable-title custom-mb"
        contenteditable="true"
        data-placeholder="Tulis judul artikel di sini..."
      ></div>
      <input type="hidden" name="judul" id="judulInput" />

      <div class="text-muted custom-mb" style="font-size: 14px">
        Ditulis oleh: <%= currentUser ? currentUser.nama : "Guest" %> Â· <%= new
        Date().toLocaleDateString('id-ID', { day: 'numeric', month: 'long',
        year: 'numeric' }) %>
      </div>

      <div class="custom-mb text-center">
        <label for="imageInput" class="upload-label">+ Tambahkan Gambar</label>
        <input
          type="file"
          id="imageInput"
          name="image"
          accept="image/*"
          hidden
        />
        <div id="imagePreview"></div>
      </div>

      <div id="toolbar" class="quill-toolbar">
        <button class="ql-bold" title="Bold"></button>
        <button class="ql-italic" title="Italic"></button>
        <button class="ql-underline" title="Underline"></button>
        <select class="ql-font" title="Font"></select>
        <select class="ql-size" title="Size"></select>
      </div>

      <div
        id="editor"
        class="quill-editor"
        data-placeholder="Tulis isi artikel di sini..."
      ></div>
      <input type="hidden" name="informasi" id="informasi" />

      <div class="d-flex justify-content-end">
        <button type="submit" class="btn px-4 py-2">Publish</button>
      </div>
      <a href="/editor/articles" class="btn">
        <i class="bi bi-arrow-left"></i> Back
      </a>
    </div>
  </main>
</form>
