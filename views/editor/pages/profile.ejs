<div id="mainContent" class="content shifted w-100" style="margin-top: 56px">
  <div
    class="p-4 bg-white d-flex justify-content-center align-items-start gap-5"
  >
    <!-- Kiri: Foto + Nama -->
    <div class="text-center">
      <img
        src="/images/default-profile.png"
        class="rounded-circle mb-3"
        style="width: 100px; height: 100px"
      />
      <h4 class="fw-bold"><%= currentUser.nama %></h4>
      <p class="text-muted">
        <%= currentUser.role.charAt(0).toUpperCase() + currentUser.role.slice(1)
        %>
      </p>
    </div>

    <!-- Kanan: Form -->
    <div>
      <form action="/employee/profile" method="POST">
        <div class="mb-3">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            value="<%= currentUser.email %>"
            name="email"
            readonly
          />
        </div>
        <div class="mb-3">
          <label>Nama</label>
          <input
            type="text"
            class="form-control"
            value="<%= currentUser.nama %>"
            name="nama"
          />
        </div>
        <div class="mb-3">
          <label>Departemen</label>
          <input
            type="text"
            class="form-control"
            value="<%= currentUser.departemen %>"
            name="departemen"
          />
        </div>
        <div class="d-flex gap-2">
          <button type="submit" class="btn">Edit</button>
          <a href="/login" class="btn">Logout</a>
        </div>
      </form>
    </div>
  </div>
</div>
