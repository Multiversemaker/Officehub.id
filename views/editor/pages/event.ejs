<main id="mainContent" class="content shifted p-4">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h2 class="heading">Event</h2>
      <button class="btn" data-bs-toggle="modal" data-bs-target="#filterModal">
        Filter
      </button>
      <a href="/editor/events/add-event" class="btn">Add Event</a>
    </div>

    <nav class="d-flex justify-content-start mb-4">
      <ul class="pagination pagination-sm m-0">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="/events?page=<%= currentPage - 1 %>">&laquo;</a>
        </li>
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="/events?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="/events?page=<%= currentPage + 1 %>">&raquo;</a>
        </li>
        <% } %>
      </ul>
    </nav>

    <%- include("../components/modal/modal-filter-event") %> <% if
    (noEventsFound) { %>
    <div class="alert alert-warning text-center">
      Tidak ada event yang ditemukan dengan filter yang dipilih.
    </div>
    <% } else { %>
    <div class="row">
      <% eventsPerPage.forEach((event) => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 border-0 shadow-sm" style="overflow: hidden">
          <div class="event-card" style="
              background-image: url('<%= event.image %>');
              min-height: 250px;
              position: relative;
              border-radius: 10px 10px 0 0;
            ">
            <div class="card-overlay"></div>
            <div class="content position-absolute top-50 start-0 translate-middle-y p-3 text-white">
              <small class="d-block mb-1">
                <i class="bi bi-calendar-event"></i> <%= event.tanggal %>
              </small>
              <h5 class="m-0 fw-bold"><%= event.tema %></h5>
            </div>
          </div>

          <div class="d-flex flex-column">
            <a href="/editor/events/<%= event.tema %>" class="btn" style="border-radius: 0; background-color: #1b4332; color: white">
              Informasi
            </a>

            <a href="/editor/events/edit-event/<%= event.tema %>" class="btn" style="border-radius: 0;">
              Edit
            </a>

            <form action="/editor/events/<%= event.tema %>?_method=DELETE" method="POST" onsubmit="return confirm('Yakin ingin menghapus event ini?');">
              <button type="submit" class="btn w-100" style="
                  border-radius: 0 0 10px 10px;
                ">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <% } %>
  </div>
</main>