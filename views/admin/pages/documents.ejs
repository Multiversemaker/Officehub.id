<main id="mainContent" class="content shifted p-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="heading">Documents</h4>
    <div class="d-flex gap-2">
      <button
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#filterDocumentModal"
      >
        <i class="bi bi-funnel"></i> Filter
      </button>
      <button
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#addDocumentModal"
      >
        <i class="bi bi-file-earmark-plus"></i> Add File
      </button>
      <button
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#createFolderModal"
      >
        <i class="bi bi-folder-plus"></i> New Folder
      </button>
    </div>
  </div>

  <!-- Recent Folders -->
  <h5 class="heading mb-3">Recent Folders</h5>
  <div class="d-flex flex-wrap gap-3 mb-5">
    <% folders.forEach(folder => { %>
    <div
      class="border rounded shadow-sm p-3 d-flex align-items-center justify-content-between"
      style="min-width: 220px"
    >
      <div class="d-flex align-items-center">
        <i
          class="bi bi-folder-fill me-2"
          style="font-size: 20px; color: #333"
        ></i>
        <span><%= folder.nama %></span>
      </div>
      <div class="d-flex gap-1">
        <button
          class="btn btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#renameFolderModal-<%= folder._id %>"
        >
          <i class="bi bi-pencil"></i>
        </button>
        <form
          action="/admin/documents/folder/<%= folder._id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-sm">
            <i class="bi bi-trash"></i>
          </button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>

  <!-- Recent Files -->
  <h5 class="heading mb-3">Recent Files</h5>
  <div class="row mb-5">
    <% documents.forEach(doc => { %>
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm h-100">
        <!-- File Icon -->
        <div
          class="bg-light d-flex align-items-center justify-content-center"
          style="height: 120px"
        >
          <% if(doc.type === "PDF") { %>
          <i
            class="bi bi-file-earmark-pdf"
            style="font-size: 48px; color: #d9534f"
          ></i>
          <% } else if(doc.type === "PPT") { %>
          <i
            class="bi bi-file-earmark-ppt"
            style="font-size: 48px; color: #d24726"
          ></i>
          <% } else if(doc.type === "Docs") { %>
          <i
            class="bi bi-file-earmark-word"
            style="font-size: 48px; color: #2b579a"
          ></i>
          <% } else if(doc.type === "Note") { %>
          <i class="bi bi-sticky" style="font-size: 48px; color: #6f42c1"></i>
          <% } else { %>
          <i
            class="bi bi-file-earmark-text"
            style="font-size: 48px; color: #999"
          ></i>
          <% } %>
        </div>

        <!-- File Info -->
        <div class="p-3 d-flex flex-column justify-content-between h-100">
          <h6 class="mb-1 heading"><%= doc.judul %></h6>
          <small class="text-muted"><%= doc.type %></small>
          <small class="text-muted"
            >Created: <%= doc.createdAt.toDateString() %></small
          >
          <small class="text-muted"
            >Uploaded by: <%= doc.uploadedBy ? doc.uploadedBy.nama : "Unknown"
            %></small
          >

          <!-- Action Buttons -->
          <div class="mt-2 d-flex gap-2 flex-wrap">
            <a
              href="/admin/documents/<%= doc._id %>/view"
              class="btn btn-sm d-flex align-items-center justify-content-center"
              style="width: 32px; height: 32px"
              title="View Online"
            >
              <i class="bi bi-eye"></i>
            </a>

            <a
              href="/admin/documents/<%= doc._id %>/open"
              class="btn btn-sm d-flex align-items-center justify-content-center"
              style="width: 32px; height: 32px"
              title="Open Desktop"
            >
              <i class="bi bi-laptop"></i>
            </a>

            <a
              href="/admin/documents/<%= doc.fileName %>/download"
              class="btn btn-sm d-flex align-items-center justify-content-center"
              style="width: 32px; height: 32px"
              title="Download"
            >
              <i class="bi bi-download"></i>
            </a>

            <% if(doc.type === "Note") { %>
            <a
              href="/admin/documents/<%= doc._id %>/editTxt"
              class="btn btn-sm"
              title="Edit TXT"
            >
              <i class="bi bi-pencil-square"></i>
            </a>
            <% } %>

            <form
              action="/admin/documents/<%= doc._id %>?_method=DELETE"
              method="POST"
              class="d-inline"
            >
              <button
                type="submit"
                class="btn btn-sm d-flex align-items-center justify-content-center"
                style="width: 32px; height: 32px"
                title="Delete"
              >
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>
