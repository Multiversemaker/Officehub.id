<main id="mainContent" class="content shifted p-4">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h4 class="heading">Folders</h4>
      <div>
        <button
          class="btn"
          data-bs-toggle="modal"
          data-bs-target="#filterFolderModal"
        >
          <i class="bi bi-funnel"></i> Filter
        </button>
        <button
          class="btn"
          data-bs-toggle="modal"
          data-bs-target="#createFolderModal"
        >
          <i class="bi bi-plus-lg"></i> Add
        </button>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>Name Folder</th>
                <th>Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (folders.length > 0) { %> <% folders.forEach(folder => { %>
              <tr>
                <td><i class="bi bi-folder me-2"></i> <%= folder.nama %></td>
                <td>
                  <%= new Date(folder.createdAt).toLocaleDateString("id-ID") %>
                </td>
                <td>
                  <a href="/folders/edit/<%= folder._id %>" class="btn me-2"
                    ><i class="bi bi-pencil-square"></i
                  ></a>
                  <button
                    class="btn"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteFolderModal-<%= folder._id %>"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="5" class="text-center text-muted">
                  Belum ada folder
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>