<main class="content p-4">
  <h4><%= doc.judul %></h4>
  <p>Type: <%= doc.type %></p>
  <p>Uploaded by: <%= doc.uploadedBy ? doc.uploadedBy.nama : "Unknown" %></p>

  <% if(doc.type === "PDF") { %>
  <iframe src="<%= filePath %>" width="100%" height="600px"></iframe>
  <% } else if(doc.type === "Image") { %>
  <img src="<%= filePath %>" alt="<%= doc.judul %>" class="img-fluid" />
  <% } else if(doc.type === "Note") { %>
  <pre><%= doc.content %></pre>
  <% } else { %>
  <a href="<%= filePath %>" download>Download File</a>
  <% } %>
</main>
