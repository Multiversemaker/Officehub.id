<main id="mainContent" class="content shifted p-4">
  <div class="position-relative mb-4">
    <img src="<%= event.image %>" alt="Event Image" class="img-fluid w-100 rounded-3" style="height: 400px; object-fit: cover; filter: brightness(70%)" />
    <div class="position-absolute top-50 end-0 p-4 text-white text-end" style="width: 60%; transform: translateX(-10%)">
      <h2 class="heading"><%= event.tema %></h2>
      <p class="text"><%= event.tanggal %></p>
    </div>
  </div>

  <div class="d-flex gap-2 mb-4">
    <a href="/employee/events" class="btn px-3">
      <i class="bi bi-arrow-left-short"></i> Back
    </a>
  </div>

  <div class="row mt-3 align-items-start">
    <div class="information col-md-6 mb-3">
      <p><%= event.deskripsi %></p>
      <div class="mt-4">
        <h5 class="fw-bold">Sub Event</h5>
        <p><%= event.subEvent %></p>
      </div>
    </div>

    <div class="col-md-6">
      <div class="p-3 rounded-3 shadow-sm bg-white">
        <p>
          <i class="bi bi-clock me-2"></i>
          <%= event.waktuMulai %> - <%= event.waktuSelesai %>
        </p>
        <p><i class="bi bi-calendar"></i> <%= event.tanggal %></p>
        <p><i class="bi bi-geo-alt"></i> <%= event.lokasi %></p>
      </div>
    </div>
  </div>
</main>