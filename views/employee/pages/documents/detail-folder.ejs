<main id="mainContent" class="content shifted-collapsed p-4">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h4 class="heading">
        <i class="bi bi-folder-fill text-warning me-2"></i> <%= folder.nama %>
      </h4>
      <a href="/employee/documents/folder" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Back
      </a>
      <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#addSubfolderModal">
        <i class="bi bi-folder-plus"></i> Subfolder
      </button>
      <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadDocModal">
        <i class="bi bi-upload"></i> Upload
      </button>
    </div>

    <h5 class="heading mb-3">Folders</h5>
    <div class="d-flex flex-wrap gap-3 mb-5">
      <% if (subFolders.length > 0) { %>
      <% subFolders.forEach(sub => { %>
      <div class="folder-card d-flex align-items-center justify-content-between p-3 shadow-sm rounded" style="border: 1px solid #ddd; border-radius: 8px; min-width: 220px;">
        <a href="/employee/documents/folder/<%= sub._id %>" class="text-decoration-none text-dark d-flex align-items-center">
          <i class="bi bi-folder-fill me-2 text-warning"></i>
          <span><%= sub.nama %></span>
        </a>

        <div class="d-flex gap-1">
          <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#editFolderModal-<%= sub._id %>" title="Rename Folder">
            <i class="bi bi-pencil text-white" style="font-size: 14px;"></i>
          </button>

          <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#deleteFolderModal-<%= sub._id %>" title="Delete Folder">
            <i class="bi bi-trash text-white" style="font-size: 14px;"></i>
          </button>
        </div>
      </div>

      <%- include('../../components/document/modal-edit-folder', { folder: sub }) %>
      <%- include('../../components/document/modal-delete-folder', { folder: sub }) %>

      <% }) %>
      <% } else { %>
      <p class="text-muted">Belum ada subfolder.</p>
      <% } %>
    </div>
    <h5 class="heading mb-3">Files</h5>
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>Document Name</th>
                <th>Date</th>
                <th>View</th>
              </tr>
            </thead>
            <tbody>
              <% if (documents.length > 0) { %>
              <% documents.forEach(doc => { %>
              <tr>
                <td>
                  <i class="bi bi-file-earmark-text me-2"></i> <%= doc.judul %>
                </td>
                <td>
                  <%= new Date(doc.createdAt).toLocaleDateString("id-ID") %>
                </td>
                <td>
                  <% if(["Docs","PPT","Excel","PDF"].includes(doc.type)) { %>
                  <button class="btn btn-sm btn-view-online" data-id="<%= doc._id %>">
                    <i class="bi bi-eye"></i>
                  </button>
                  <% } %>
                  <a href="/employee/documents/<%= doc._id %>/open" class="btn btn-sm btn-light" title="Open Desktop">
                    <i class="bi bi-laptop"></i>
                  </a>
                  <a href="/employee/documents/<%= doc._id %>/download" class="btn btn-sm btn-light" title="Download">
                    <i class="bi bi-download"></i>
                  </a>
                </td>
              </tr>
              <% }) %>
              <% } else { %>
              <tr>
                <td colspan="4" class="text-center text-muted">
                  Belum ada dokumen
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</main>

<%- include('../../components/document/modal-create-subFolder') %>
<%- include('../../components/document/modal-upload-detail') %>