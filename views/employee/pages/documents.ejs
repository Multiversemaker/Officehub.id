<main id="mainContent" class="content shifted p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="heading">Documents</h4>
    <div>
      <button
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#filterDocumentModal"
      >
       <i class="bi bi-funnel"></i> Filter
      </button>
      <button
        class="btn"
        data-bs-toggle="modal"
        data-bs-target="#addDocumentModal"
      >
        <i class="bi bi-file-earmark-plus"></i> Add File
      </button>
    </div>
  </div>

  <h5 class="heading mb-3">Recent Folders</h5>
  <div class="d-flex flex-wrap gap-3 mb-5">
    <% folders.forEach(folder => { %>
    <div
      class="border rounded shadow-sm p-3 d-flex align-items-center"
      style="min-width: 200px"
    >
      <i
        class="bi bi-folder-fill me-2"
        style="font-size: 20px; color: #333"
      ></i>
      <span><%= folder.nama %></span>
    </div>
    <% }) %>
  </div>

  <h5 class="heading mb-3">Recent Files</h5>
  <div class="row mb-5">
    <% documents.forEach(doc => { %>
    <div class="col-md-3 mb-3">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column justify-content-between p-0">
          <!-- Preview -->
          <div
            class="bg-light d-flex align-items-center justify-content-center"
            style="height: 120px"
          >
            <% if(doc.type === "PDF") { %>
            <i
              class="bi bi-file-earmark-pdf"
              style="font-size: 48px; color: #d9534f"
            ></i>
            <% } else if(doc.type === "PPT") { %>
            <i
              class="bi bi-file-earmark-ppt"
              style="font-size: 48px; color: #d24726"
            ></i>
            <% } else if(doc.type === "Docs") { %>
            <i
              class="bi bi-file-earmark-word"
              style="font-size: 48px; color: #2b579a"
            ></i>
            <% } else if(doc.type === "Note") { %>
            <i class="bi bi-sticky" style="font-size: 48px; color: #6f42c1"></i>
            <% } else { %>
            <i
              class="bi bi-file-earmark-text"
              style="font-size: 48px; color: #999"
            ></i>
            <% } %>
          </div>
          <div class="p-3">
            <h6 class="mb-1 heading"><%= doc.judul %></h6>
            <small class="text-muted"><%= doc.type %></small><br />
            <small class="text-muted">
              Created: <%= doc.createdAt.toDateString() %>
            </small>
            <div class="mt-2 d-flex gap-2">
              <% if(doc.type === "Docs" || doc.type === "PPT" || doc.type ===
              "Spreadsheet") { %>
              <a
                href="/employee/documents/<%= doc._id %>/view"
                class="btn btn-sm"
                title="View Online"
              >
                <i class="bi bi-eye"></i>
              </a>
              <% } %>

              <a
                href="/employee/documents/<%= doc._id %>/open"
                class="btn btn-sm"
                title="Open Desktop"
              >
                <i class="bi bi-laptop"></i>
              </a>

              <a
                href="/employee/documents/<%= doc._id %>/download"
                class="btn btn-sm"
                title="Download"
              >
                <i class="bi bi-download"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>

<%- include('../components/document/modal-upload') %> <%-
include('../components/document/modal-folder') %> <%-
include('../components/modal/modal-filter-document')%>
