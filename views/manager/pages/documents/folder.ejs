<main id="mainContent" class="content shifted-collapsed p-4">
  <div class="container-fluid">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h4 class="heading">Folders</h4>
      <div>
        <button class="btn"><i class="bi bi-funnel"></i> Filter</button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFolderModal">
          <i class="bi bi-folder-plus"></i> Tambah Folder
        </button>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th><i class="bi bi-folder me-2"></i> Name Folder</th>
                <th>Date Created</th>
              </tr>
            </thead>
            <tbody>
              <% if (folders.length > 0) { %> <% folders.forEach(folder => { %>
              <tr>
                <td>
                  <a href="/manager/documents/folder/<%= folder._id %>" class="text-decoration-none text-dark">
                    <i class="bi bi-folder-fill me-2 text-warning"></i> <%=
                    folder.nama %>
                  </a>
                </td>
                <td>
                  <%= new Date(folder.createdAt).toLocaleDateString("id-ID") %>
                </td>
              </tr>
              <% }) %> <% } else { %>
              <tr>
                <td colspan="2" class="text-center text-muted">
                  Belum ada folder
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('../../components/document/modal-create-folder') %>